<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="477dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_default2"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_create_vertical_note"
            android:layout_width="188dp"
            android:layout_height="202dp"
            android:layout_gravity="center"
            android:layout_marginRight="29dp"
            android:background="@drawable/btn_create_new_note_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_protrait_110x110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/create_new_note_vertical"
                android:textSize="26dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_create_horizontal_note"
            android:layout_width="188dp"
            android:layout_height="202dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_create_new_note_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_landscpe_110x110" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/create_new_note_horizontal"
                android:textSize="26dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>